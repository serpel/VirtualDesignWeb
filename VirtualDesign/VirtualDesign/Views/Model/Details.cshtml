@model VirtualDesign.Models.Model
@using Microsoft.AspNet.Identity
@using VirtualDesign.Helpers

@{
    ViewBag.Title = "Details";
}

<div class="row hidden-xlg">
    <ol class="commentlist">
            <li class="col-sm-4" style="list-style:none;" category="@Model.Category.Name">
                <div class="">
                    <div class="itemM">
                        <div class="itemMM">
                            <div class="col-md-12 m-b-10">

                                <div class="widget-item ">
                                    <div class="controller overlay right"> <a href="javascript:;" class="reload"></a> <a href="javascript:;" class="remove"></a> </div>
                                    <div class="tiles green  overflow-hidden full-height" style="max-height:214px">
                                        <div class="overlayer bottom-right fullwidth">
                                            <div class="overlayer-wrapper">
                                                <div class="tiles gradient-black p-l-20 p-r-20 p-b-20 p-t-20">
                                                    <div class="pull-right">
                                                        @if (!Model.Tags.IsEmpty())
                                                        {
                                                            foreach (var tag in Model.Tags.Split(',').Take(3))
                                                            {
                                                                <a href="#" class="hashtags transparent"> @tag </a>
                                                            }
                                                        }
                                                    </div>
                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                        </div>

                                        @{
                                            var imgSrc = Model.PictureFile.IsEmpty() ? @Url.Content("~/Content/user/model/model_723_aal.jpg") : Model.PictureFile;
                                        }
                                        <img src="@imgSrc" alt="" class="lazy hover-effect-img" />
                                    </div>
                                    <div class="tiles white ">
                                        <div class="tiles-body">
                                            <div class="row">
                                                <div class="user-profile-pic text-left">
                                                    <img width="69" height="69" data-src-retina="@Url.Content("~/Content/assets/img/profiles/avatar2x.jpg")" data-src="@Url.Content("~/Content/assets/img/profiles/avatar.jpg")" src="@Url.Content("~/Content/assets/img/profiles/avatar.jpg")" alt="">
                                                    <div class="pull-right m-r-20 m-t-35"> <span class="bold text-black small-text">@Model.CreatedDate.TimeAgo()</span> </div>
                                                </div>
                                                <div class="col-md-12 no-padding">
                                                    <div class="user-comment-wrapper">
                                                        <div class="comment">
                                                            <div class="user-name text-black bold"><span class="semi-bold">@Html.DisplayFor(modelItem => Model.Name)</span> </div>
                                                            <div class="preview-wrapper">@@ @Html.ActionLink(Model.Username, "TimeLine", "Account", new { id = Model.Username }, null) </div>
                                                        </div>
                                                        <div class="clearfix"></div>
                                                    </div>
                                                    <div class="m-r-20 m-t-20 m-b-10  m-l-10">
                                                        <!--<p class="p-b-10"></p>-->
                                                        <p>@Html.DisplayFor(modelItem => Model.Description)</p>
                                                        <div class="post p-t-10 p-b-10">
                                                            <ul class="action-bar no-margin p-b-20 ">
                                                                <!--<li><a href="#" class="text-error bold"><i class="fa fa-heart m-r-10"></i>250</a></li>-->
                                                                <li class="pull-left">
                                                                    <div class="fb-like"
                                                                         data-href="@Request.Url.GetLeftPart(UriPartial.Path)"
                                                                         data-share="true"
                                                                         data-show-faces="false"
                                                                         data-width="450"></div>
                                                                    <!--data-href="@Url.Action("Details", new { id = Model.ModelId })"-->
                                                                </li>
                                                                @if (Request.IsAuthenticated && Model.Username == User.Identity.GetUserName())
                                                                {
                                                                    <li class="pull-right"><a href="@Url.Action("Delete", new { id = Model.ModelId })" class="text-success"><i class="fa fa-minus-circle"></i> delete <span class="text-muted"></span></a></li>
                                                                    <li class="pull-right">|</li>
                                                                    <li class="pull-right"><a href="@Url.Action("Edit", new { id = Model.ModelId })" class="text-success"><i class="fa fa-edit"></i> edit <span class="text-muted"></span></a></li>
                                                                }
                                                            </ul>
                                                            <div class="clearfix"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </li>
    </ol>
</div>
