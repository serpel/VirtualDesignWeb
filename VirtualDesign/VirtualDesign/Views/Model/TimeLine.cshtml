@model IEnumerable<VirtualDesign.Models.Model>
@using Microsoft.AspNet.Identity
@using VirtualDesign.Helpers

@{
    //Layout = null;
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <div class="col-md-10 col-vlg-7">
        <ul class="cbp_tmtimeline">

            @foreach (var item in Model)
            {
                <li>
                    <time class="cbp_tmtime" datetime="@item.CreatedDate">
                        <span class="date">@item.CreatedDate.TimeAgo()</span>
                        <span class="time">@item.CreatedDate.TimeOfDay<span class="semi-bold">am</span></span>
                    </time>
                    <div class="cbp_tmicon info animated bounceIn"> <i class="fa fa-quote-left"></i> </div>
                    <div class="cbp_tmlabel">
                        <div class="p-t-10 p-l-30 p-r-20 p-b-20 xs-p-r-10 xs-p-l-10 xs-p-t-5">
                            <h4 class="inline m-b-5"><span class="text-success semi-bold">Jane smith</span> </h4>
                            <h5 class="inline muted semi-bold m-b-5">@@ @item.Username</h5>
                            <div class="muted">@item.Category.Name</div>
                            <p class="m-t-5 dark-text">
                                @item.Description
                            </p>
                        </div>
                        <div class="m-l-10 m-r-10 xs-m-l-5 xs-m-r-5"> <img src="@item.PictureFile" style="width:100%" alt=""> </div>
                        <div class="clearfix"></div>

                        <div class="xs-p-r-10 xs-p-l-10 p-l-30 p-r-20 p-b-10 p-t-20 row">
                            <div class="col-md-6">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ModelId })
                                @Html.ActionLink("Delete", "Delete", new { id = item.ModelId })
                            </div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>